{
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.9"
    }
  },
  "rewrites": [
    {
      "source": "/api/oauth/pipedrive/connect",
      "destination": "/api/oauth/pipedrive/connect.py"
    },
    {
      "source": "/api/oauth/pipedrive/callback",
      "destination": "/api/oauth/pipedrive/callback.py"
    },
    {
      "source": "/api/oauth/azure/connect",
      "destination": "/api/oauth/azure/connect.py"
    },
    {
      "source": "/api/oauth/azure/callback",
      "destination": "/api/oauth/azure/callback.py"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-User-ID"
        }
      ]
    }
  ]
} 